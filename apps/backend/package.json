{
  "name": "@sidereal/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --watch --experimental-strip-types src/index.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node --experimental-strip-types src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "drizzle-orm": "^0.36.0",
    "postgres": "^3.4.0",
    "@hono/node-server": "^1.13.0",
    "@sidereal/shared-types": "workspace:*"
  },
  "devDependencies": {
    "@sidereal/typescript-config": "workspace:*",
    "@sidereal/eslint-config": "workspace:*",
    "@types/node": "^22.0.0",
    "drizzle-kit": "^0.28.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  }
}
